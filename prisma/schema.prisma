// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  people        Person[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- AI Chief of Staff: Person, Fact, Event ---
// SQLite does not support Prisma enums; use String, validate with Zod (relationshipState, fact type, etc.)

model Person {
  id                String    @id @default(cuid())
  isOrigin          Boolean   @default(false) // exactly one Person has true; represents user (Michelle Campeau)
  name              String
  primaryEmail      String?
  phone             String?
  organization      String?
  role              String?
  tags              String?   // JSON array of strings
  relationshipState String    @default("ok") // ok | warm_up | do_not_contact
  lastContacted     DateTime?
  notes             String?   // full text, no truncation
  hometown          String?
  birthday          String?
  venmo             String?
  universities      String?   // JSON array of strings
  interests         String?   // JSON array of strings
  userId            String?
  user              User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  facts             Fact[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Fact {
  id         String   @id @default(cuid())
  personId   String
  person     Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  type       String   // expertise | interest | shared_context | preference | relationship_status | logistics
  value      String
  author     String   @default("me") // me | them | inferred
  confidence Float   @default(1)
  timestamp  DateTime @default(now())
  sourceType String   @default("manual") // manual | whatsapp | gmail
  sourceRef  String?
  createdAt  DateTime @default(now())
}

model Event {
  id           String   @id @default(cuid())
  type         String   // message | email | meeting | group
  channel      String   @default("manual") // manual | whatsapp | gmail
  timestamp    DateTime @default(now())
  participants String?  // JSON array of personIds
  contentRef   String?
  createdAt    DateTime @default(now())
}

